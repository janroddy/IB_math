    "#pv = present value\n",
    "#r = rate \n",
    "#n = number of years\n",
    "#k = number of compounding periods per year\n",
    "def calc_future_value(pv, r, n, k):\n",
    "    return pv * (1 + r/(k*100))**(n*k)\n",
    "    \n",
    "fv = calc_future_value(6000, 4, 8, 1)\n",
    "print (round(fv, 2))\n"
   ]
